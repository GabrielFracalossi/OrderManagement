@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Relatórios de Pedidos";
    Layout = "~/Views/Shared/Layout.cshtml";

    var reports = Model.Count();
}

<h2>Relatórios de Pedidos</h2>

@if (reports >= 1){
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Cliente</th>
                <th>Total Gasto</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.CustomerName</td>
                    <td>@order.TotalSpent.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>
}

@if (reports == 0){
    <p>Não foram encontrados relatórios.</p>
}