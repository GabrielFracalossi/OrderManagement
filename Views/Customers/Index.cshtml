@model IEnumerable<OrderManagement.Controllers.Customers.Models.CustomersViewModel>

@{
    ViewData["Title"] = "Lista de Clientes";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Lista de Clientes</h2>
<a href="/Customers/Create" class="btn btn-primary mb-3">Novo cliente</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Email</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.Name</td>
                <td>@customer.Email</td>
                <td>
                    <a href="/Customers/Edit/@customer.Id" class="btn btn-warning btn-sm">Editar</a>
                </td>
            </tr>
        }
    </tbody>
</table>