@model OrderManagement.Controllers.Orders.Models.OrdersViewModel;

@{
    ViewData["Title"] = "Novo Pedido";
    Layout = "~/Views/Shared/Layout.cshtml";

    var products = ViewBag.Products;
    var customers = ViewBag.Customers;
}
<h2>Novo Pedido</h2>
<form method="post" action="/Orders/Create">
    <div class="mb-3">
        <label class="form-label">Cliente</label>
        <select class="form-control" name="CustomerId" required >
            <option value="" disabled selected hidden>Escolha um cliente</option>
            @foreach (var customer in customers)    
            {
                <option value="@customer.Id">@customer.Name</option>
            }
        </select>
    </div>
    <div class="mb-3">
        <div class="accordion mb-3" id="accordionProducts">
            <div class="accordion-item">
                <div class="accordion-header" id="headingProducts">
                    <button class="accordion-button collapsed" 
                            type="button" 
                            data-bs-toggle="collapse" 
                            data-bs-target="#collapseProducts" 
                            aria-expanded="false" 
                            aria-controls="collapseProducts">
                            Escolha os Produtos
                    </button>
                </div>
                <div id="collapseProducts"
                     class="accordion-collapse collapse"
                     aria-labelledby="headingProducts"
                     data-bs-parent="#accordionProducts">
                    <div class="accordion-body">
                        <div class="row">
                            <div class="col-12">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Selecionar</th>
                                            <th>Produto</th>
                                            <th>Estoque</th>
                                            <th>Preço</th>
                                            <th>Quantidade</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (int i = 0; i < products.Count; i++)
                                        {
                                            <tr>
                                                <td>
                                                    <input type="checkbox" name="Items[@i].ProductId" value="@products[i].Id" class="product-checkbox" />
                                                </td>
                                                <td>@products[i].Name</td>
                                                <td>@products[i].Stock</td>
                                                <td>@products[i].Price.ToString("C")</td>
                                                <td>
                                                    <input type="number" name="Items[@i].Quantity" class="form-control" min="1" max="@products[i].Stock" required />
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-success">Criar Pedido</button>
    <a href="/Orders" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts{

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            let checkboxes = document.querySelectorAll(".product-checkbox");

            checkboxes.forEach(function (checkbox) {
                let quantityInput = checkbox.closest("tr").querySelector("input[type='number']");

                quantityInput.disabled = true;

                checkbox.addEventListener("change", function () {
                    quantityInput.disabled = !this.checked;
                    if (!this.checked) {
                        quantityInput.value = "";
                    }
                });
            });
        });
    </script>

}