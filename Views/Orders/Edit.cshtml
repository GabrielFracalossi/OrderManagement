@model OrderManagement.Controllers.Orders.Models;

@{
    ViewData["Title"] = "Editar Pedido";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar Pedido</h2>
<form method="post" action="/Orders/Edit/@Model.Id">
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="mb-3">
        <label class="form-label">Cliente</label>
        <input type="text" class="form-control" name="CustomerId" value="@Model.CustomerId" required />
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
    <a href="/Orders" class="btn btn-primary">Voltar</a>
</form>