@model OrderManagementSystem.Models.Product

@{
    ViewData["Title"] = "Editar Produto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar Produto</h2>

<form method="post" action="/Products/Edit/@Model.Id">
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="mb-3">
        <label class="form-label">Nome</label>
        <input type="text" class="form-control" name="Name" value="@Model.Name" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Preço</label>
        <input type="number" step="0.01" class="form-control" name="Price" value="@Model.Price" required />
    </div>
    <div class="mb-3">
        <label class="form-label">Estoque</label>
        <input type="number" class="form-control" name="Stock" value="@Model.Stock" required />
    </div>
    <button type="submit" class="btn btn-success">Salvar</button>
    <a href="/Products" class="btn btn-secondary">Cancelar</a>
</form>
